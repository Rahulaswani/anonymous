<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:weightSum="6"
    android:padding="5dp">

    <ImageView
        android:id="@+id/limageview_doctorimage"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_weight="2"
        android:background="@color/jarvis_pink"
        />

    <LinearLayout
        android:id="@+id/linearlayout_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/linearlayout_heading"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_weight="3.3"
            android:padding="2dp"
            android:background="@color/jarvis_red">

            <TextView
                android:id="@+id/doctor_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Dr. Rahul Aswani"
                android:singleLine="true"
                android:textColor="@android:color/black"
                />
            <TextView
                android:id="@+id/doctor_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:text="M.B.B.S, B.D.S."
                android:singleLine="true"
                android:textColor="@android:color/black"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/doctor_extratext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Doctor is really good and has "
                android:textColor="@android:color/black"
                />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_price"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:background="@color/jarvis_blue"
        android:orientation="vertical">


        <TextView
            android:id="@+id/doctor_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:text="Experience"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/doctor_fees"
            android:layout_marginTop="65dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:text="Fees"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

</LinearLayout>